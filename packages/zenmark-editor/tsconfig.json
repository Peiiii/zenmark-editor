{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noEmit": true,
    "declaration": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "xbook/*": ["./src/xbook/*"],
      "xbook": ["./src/xbook"],
      "prosemirror-model": ["@tiptap/pm/model"],
      "prosemirror-view": ["@tiptap/pm/view"],
      "prosemirror-state": ["@tiptap/pm/state"],
      "prosemirror-commands": ["@tiptap/pm/commands"],
      "prosemirror-transform": ["@tiptap/pm/transform"],
      "prosemirror-history": ["@tiptap/pm/history"],
      "prosemirror-keymap": ["@tiptap/pm/keymap"],
      "prosemirror-inputrules": ["@tiptap/pm/inputrules"],
      "prosemirror-schema-list": ["@tiptap/pm/schema-list"],
      "prosemirror-dropcursor": ["@tiptap/pm/dropcursor"],
      "prosemirror-gapcursor": ["@tiptap/pm/gapcursor"],
      "prosemirror-markdown": ["@tiptap/pm/markdown"]
    }
  },
  "include": ["src"]
}
